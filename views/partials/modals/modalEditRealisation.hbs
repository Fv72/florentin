<div class="modal fade" id="modalEditRealisation{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/realisation/{{ _id }}?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Editer Realisation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Titre</label>
                        <input type="text" class="form-control" name='title' id="recipient-name" value='{{ title }}'>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Contenu de la r√©alisation</label>
                        <textarea class="form-control" name='content' id="message-text">
                            {{ content }}
                        </textarea>
                        <input type="file" name="imageRealisation" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Editer</button>
                </div>
            </form>
        </div>
    </div>
</div>