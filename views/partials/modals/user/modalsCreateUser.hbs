<div class="modal-content align-items-center">
    <!-- Modal -->
    <div class="modal fade" id="inscription" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true" class="col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">S'inscrire</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label for="email">E-Mail</label>
                                <input type="email" class="form-control" name="emailLogin" id="emailLogin" required=""
                                    aria-describedby="emailHelp">
                                <form class="form-inline">
                                    <div class="form-group">
                                        <label for="inputPassword6">Password</label>
                                        <input type="password" id="inputPassword6" class="form-control mx-sm-3"
                                            aria-describedby="passwordHelpInline">
                                        <small id="passwordHelpInline" class="text-muted">
                                            Must be 8-20 characters long.
                                        </small>
                                    </div>
                                </form>
                                <form class="form-inline">
                                    <div class="form-group">
                                        <label for="inputPassword6">Confirm Pass.</label>
                                        <input type="password" id="inputPassword6" class="form-control mx-sm-3"
                                            aria-describedby="passwordHelpInline">
                                        <small id="passwordHelpInline" class="text-muted">
                                        </small>
                                    </div>
                                </form>
                                <form>
                                    <input type="radio" id="male" name="gender" value="male">
                                    <label for="male">M.</label><br>
                                    <input type="radio" id="female" name="gender" value="female">
                                    <label for="female">Mme</label><br>
                                </form>
                                <label for="Name">Nom</label>
                                <input type="Name" class="form-control" name="emailLogin" id="emailLogin" required=""
                                    aria-describedby="emailHelp">
                                <label for="Prénom">Prénom</label>
                                <input type="Prénom" class="form-control" name="emailLogin" id="emailLogin" required=""
                                    aria-describedby="emailHelp">
                                <label for="téléphone">N° de téléphone (facultatif)</label>
                                <input type="téléphone" class="form-control" name="emailLogin" id="emailLogin"
                                    required="" aria-describedby="emailHelp">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary">S'inscrire</button>
                </div>
            </div>
        </div>
    </div>
</div>